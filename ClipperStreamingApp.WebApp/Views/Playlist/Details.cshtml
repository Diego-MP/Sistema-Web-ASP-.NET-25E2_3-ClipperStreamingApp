@model ClipperStreamingApp.WebApp.Models.PlaylistDetalhesViewModel
@{
    ViewData["Title"] = "Detalhes da Playlist";
}

<div class="container mt-4">
    @if (Model != null)
    {
        <h3>@Model.Nome</h3>
        <hr />

        @if (Model.Musicas?.Values != null && Model.Musicas.Values.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Música</th>
                    <th>Banda/Artista</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var musica in Model.Musicas.Values)
                {
                    <tr>
                        <td>@musica.Nome</td>
                        <td>@musica.NomeBanda</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                Esta playlist não possui músicas.
            </div>
        }
    
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar para minhas playlists</a>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            Não foi possível carregar os detalhes da playlist.
        </div>
    }
</div>